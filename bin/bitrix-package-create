#!/bin/bash

git init
dir=${PWD##*/}
echo $dir
hub create "bitrix-module-$dir"
git remote -v
echo "
{
    \"name\": \"nonlux/bitrix-module-$dir\",
    \"description\": \"Nonofficial bitrix repository for module $dir\",
    \"type\": \"bitrix-module\",
    \"license\": \"proprietary\",
    \"authors\": [
        {
            \"name\": \"nonlux\",
            \"email\": \"nonluxi@gmail.com\"
        }
    ],
    \"require\": {}
}
" > composer.json
cat composer.json
composer validate
git add .
git status
git commit -m "version 15.5.8"
git push -u origin master
git tag v15.5.8
git push -u origin v15.5.8
